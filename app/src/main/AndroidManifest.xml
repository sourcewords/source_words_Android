<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sourcewords">
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:name=".App"
        android:allowBackup="false"
        android:usesCleartextTraffic="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.SourceWords"
        tools:targetApi="m">


        <activity
            android:name=".ui.login.view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.MainActivity"/>
        <activity android:name=".ui.mine.view.AddPlanActivity"/>
        <activity android:name=".ui.mine.view.ChangePwdActivity"/>
        <activity android:name=".ui.mine.view.UserInfoActivity"/>
        <activity android:name=".ui.login.view.RegisterActivity"/>
        <activity android:name=".ui.learn.view.LearnSearchActivity"/>
        <activity android:name=".ui.learn.view.WordRootPage"/>
    </application>

</manifest>