<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sourcewords">
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:name=".App"
        android:allowBackup="false"
        android:usesCleartextTraffic="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.SourceWords"
        android:hardwareAccelerated="false"
        android:exported = "true"
        tools:targetApi="m">


        <activity
            android:name=".ui.login.view.LoginActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.mine.view.AllPlanActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.mine.view.ChangePwdActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.mine.view.UserAgreementActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.mine.view.SettingActivity" />
        <activity android:name=".ui.mine.view.UserInfoActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".ui.login.view.RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.mine.view.AddPlanActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.review.view.DetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.review.view.SearchWordsDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.review.view.ReviewSearchActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.learn.view.LearnSearchActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.learn.view.WordRootPage"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.mine.view.SigninActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.mine.view.MyPlanActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.login.view.ForgetPwdActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.login.view.SetPwdActivity"
            android:screenOrientation="portrait"/>
    </application>
</manifest>